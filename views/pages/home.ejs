<%- include("./../partials/header.ejs", { showNavbar: true }) %>

<main id="home" style="display: flex; flex-direction: column; align-items: center; padding: 20px;">
    <h1>Welcome, <%= email %>!</h1>
    
    <a href="/create-label" class="create-button">Create New Label</a>

    <div class="gallery">
        <% images.forEach(image => { %>
            <div class="image-item">
                <img src="/<%= image.filePath %>" alt="QR Code Image" class="qr-image">
                <a href="/label/<%= image.label_id %>/edit" class="edit-button">Edit</a>
            </div>
        <% }) %>
    </div>

    <style>
        h1 {
            color: #333;
            margin-bottom: 10px;
            text-align: center;
            font-size: 28px; 
        }

        .create-button {
            text-decoration: none;
            background-color: #656565;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            margin-bottom: 30px;
            transition: background-color 0.3s;
            display: inline-block;
            font-size: 16px;
        }

        .create-button:hover {
            background-color: #818181;
        }

        .gallery {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            justify-items: center;
            width: 100%;
            max-width: 1200px;
        }
    
        .image-item {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 15px;
            text-align: center;
            transition: transform 0.2s, box-shadow 0.2s;
        }
    
        .image-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .qr-image {
            max-width: 200px;
            height: auto;
            border-radius: 5px;
            display: block;
            margin: 0 auto 10px auto;
        }

        .edit-button {
            text-decoration: none;
            background-color: #007bff;
            color: white;
            padding: 5px 15px;
            border-radius: 3px;
            transition: background-color 0.3s;
            margin-top: 10px;
            display: inline-block;
            font-size: 14px;
        }

        .edit-button:hover {
            background-color: #0056b3;
        }

        @media (max-width: 600px) {
            .create-button {
                width: 100%;
                text-align: center;
            }
        }
    </style>
</main>

<%- include("./../partials/footer.ejs") %>
