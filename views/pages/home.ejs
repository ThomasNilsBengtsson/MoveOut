<%- include("./../partials/header.ejs") %>

<body>
    <main id="home" style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 100vh; padding: 20px;">
        <h1>Welcome, <%= email %>!</h1>
        
        <a href="/create-label" class="create-button">Create New Label</a>

        <div class="gallery">
            <% images.forEach(image => { %>
                <div class="image-item">
                    <img src="/<%= image.filePath %>" alt="QR Code Image" class="qr-image">
                    <a href="/label/<%= image.label_id %>/edit" class="edit-button">Edit</a>
                </div>
            <% }) %>
        </div>

        <style>
            h1 {
                color: #333;
                margin-bottom: 20px;
                text-align: center;
                font-size: 24px;
            }

            .create-button {
                text-decoration: none;
                background-color: #656565;
                color: white;
                padding: 10px 20px;
                border-radius: 5px;
                margin-bottom: 20px;
                transition: background-color 0.3s;
                display: inline-block;
                font-size: 16px;
            }

            .create-button:hover {
                background-color: #818181;
            }

            .gallery {
                display: flex;
                flex-wrap: wrap; 
                gap: 15px;
                justify-content: center; 
                width: 100%;
                max-width: 900px;
            }
        
            .image-item {
                background: #fff;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                padding: 10px;
                text-align: center;
                transition: transform 0.2s;
            }
        
            .image-item:hover {
                transform: translateY(-5px);
            }

            .qr-image {
                max-width: 200px;
                height: auto;
                border-radius: 5px;
                display: block;
                margin: 0 auto;
            }

            .edit-button {
                text-decoration: none;
                background-color: #007bff;
                color: white;
                padding: 5px 10px;
                border-radius: 3px;
                transition: background-color 0.3s;
                margin-top: 10px;
                display: inline-block;
                font-size: 14px;
            }

            .edit-button:hover {
                background-color: #0056b3;
            }
        </style>
    </main>
</body>
<%- include("./../partials/footer.ejs") %>





