<%- include("./../partials/footer.ejs", { showNavbar: true }) %>
<main id="admin-dashboard" style="padding: 20px;"></main>
    <h1>Admin Dashboard</h1>
    <table>
        <thead>
            <tr>
                <th>Email</th>
                <th>Status</th>
                <th>Last Login</th>
                <th>Google Registered</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.email %></td>
                    <td><%= user.is_active ? 'Active' : 'Inactive' %></td>
                    <td><%= user.last_login_at ? new Date(user.last_login_at).toLocaleString() : 'Never' %></td>
                    <td><%= user.google_registered ? 'Yes' : 'No' %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</main>
<%- include("./../partials/footer.ejs") %>